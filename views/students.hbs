<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 m-0">All Students</h1>
    <!--    <a href="/student/new" class="btn btn-primary">Add Student</a>-->
</div>
<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle m-0">
                <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>First</th>
                    <th class="text-end">Last</th>
                    <th class="text-end">Major</th>
                    <th class="text-end">GPA</th>
                    <th class="text-end">Full Name</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each students}}
                    <tr>
                        <td>{{StudentID}}</td>
                        <td class="fw-medium">
                            {{FirstName}}
                                                        <a href="/students/{{StudentID}}" class="text-decoration-none"></a>
                        </td>
                        <td class="text-end">{{LastName}}</td>
                        <td class="text-end">{{Major}}</td>
                        <td class="text-end">{{GPA}}</td>
                        <td class="text-end">{{FirstName}} {{LastName}}</td>
                        <td class="text-center">
                            <a href="/students/{{StudentID}}" class="btn btn-sm btn-outline-secondary me-1">View</a>
                            <a href="/students/{{StudentID}}/edit" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                            <form
                                    method="POST"
                                    action="/students/{{StudentID}}?_method=DELETE"
                                    class="d-inline"
                                    onsubmit="return confirm('Delete student #{{StudentID}}?');"
                            >
                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>