<div class="d-flex justify-content-between align-items-center mb-3">
    <a href="/" class="text-decoration-none">&larr; Back to list</a>
    <div>
        <a class="btn btn-sm btn-outline-primary btn-pill" href="/students/{{student.StudentID}}/edit">Edit</a>
        <form method="POST" action="/students/{{student.StudentID}}?_method=DELETE" class="d-inline"
              onsubmit="return confirm('Delete student #{{student.StudentID}}?');">
            <button class="btn btn-sm btn-outline-danger btn-pill">Delete</button>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="h4 mb-3">Student #{{student.StudentID}} - {{student.FirstName}} {{student.LastName}}</h1>
        <dl class="row">
            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">{{student.FirstName}}</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">{{student.LastName}}</dd>

            <dt class="col-sm-3">Major</dt>
            <dd class="col-sm-9">{{student.Major}}</dd>

            <dt class="col-sm-3">GPA</dt>
            <dd class="col-sm-9">{{student.GPA}}</dd>
        </dl>
    </div>
</div>